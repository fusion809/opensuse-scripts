#!/bin/bash
if `printf "$PWD" | grep 'AUR' > /dev/null 2>&1`; then
  /usr/local/bin/mksrcinfo
fi
/usr/bin/git add --all                                        # Add all files to git
/usr/bin/git commit -m "$1"                                   # Commit with message = argument 1
/usr/bin/git push origin $(git rev-parse --abbrev-ref HEAD)   # Push to the current branch
